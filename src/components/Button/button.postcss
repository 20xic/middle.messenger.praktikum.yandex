.button {
    padding: 12px 24px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 13px;
    border: none;
    width: 100%;
  
    &--primary {
      background: var(--primary-color);
      color: white;
  
      &:hover {
        opacity: 0.9;
      }
    }
  
    &--link {
      background: none;
      color: var(--primary-color);
      text-decoration: underline;
      padding: 0;
      width: auto;
    }
  }