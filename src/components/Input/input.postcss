.input-field {
    margin-bottom: 16px;
    
    .input-label {
      display: block;
      margin-bottom: 8px;
      font-size: 12px;
      color: var(--text-secondary);
      
    }
  
    .input {
      box-sizing:border-box;
      width: 100%;
      padding: 10px;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      font-size: 13px;
      
  
      &:focus {
        border-color: var(--primary-color);
        outline: none;
      }
    }
  }
